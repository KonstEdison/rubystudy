<div class="container">
  <h1 class="title">Cases</h1>
  <%= link_to 'New Case', new_case_path, class: 'button is-primary' %>
  <table class="table is-fullwidth is-striped is-hoverable">
    <thead>
      <tr>
        <th>Internal Name</th>
        <th>Case Code</th>
        <th>Brand Name</th>
        <th>Client Name</th>
        <th>Law Firm</th>
       
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @cases.each do |case_item| %>
        <tr>
        <td><%= case_item.internal_name %></td>
          <td><%= case_item.edison_case_code %></td>
          <td><%= case_item.brand_name %></td>
          <td><%= case_item.client_name %></td>
          <td><%= case_item.law_firm %></td>
          
          <td><%= link_to 'Defendants', case_defendants_path(case_item), class: 'button is-small is-info' %></td>
          <td><%= link_to 'Edit', edit_case_path(case_item), class: 'button is-small is-primary' %></td>
          <td><%= button_to 'Destroy', case_path(case_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>